<h6>Dashboard view</h6>
<h3>Welcome {{name}}.</h3>
<p>Here are your stories</p>

{{#if stories}}
<table class="striped">
    <thead> 
        <tr>    
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{id}}"></a>{{title}}</td>
            <td>{{CreatedAt}}</td>
            <td><span class="dash-status">{{Status}} </span></td>
            <td></td>

        </tr>

         {{/each}}
    </tbody>

    
</table>
{{else}}
<p>You have not vreated any stories</p>
{{/if}}